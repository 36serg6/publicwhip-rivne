<% friends.each_with_index do |f, i| %>
  <div class="row">
    <div class="col-3">
      <div class="progress">
        <div class="progress-bar-0<%= i %>-<%= friends.current_page %> progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="background-color: #FFDD2D">
          <%= fraction_to_percentage_display((f.count.to_f/mp.mp_info.votes_possible))%>
        </div>
      </div>
      <script type="text/javascript">
        //<![CDATA[
        $( document ).ready(function(){
          $(".progress-bar-0<%= i %>-<%=  friends.current_page %>").animate({
            width: "<%= fraction_to_percentage_display((f.count.to_f/mp.mp_info.votes_possible))%>"
          }, 2500);
        });
        //]]>
      </script>
       </div>
    <div class="col-3"><%= f.mp2.full_name %></div>
    <div class="col-3"><%= f.mp2.okrug %></div>
    <div class="col-3"><%= f.mp2.faction %></div>
  </div>
<% end %>
<div class="index-pagination">
  <% unless friends.last_page? %>
      <%= link_to('<h4 class="text-uppercase text-center">Більше <i class="fa fa-arrow-circle-right" aria-hidden="true"></i></h4>'.html_safe, people_friends_path(params.merge(page: friends.current_page + 1)), remote: true, id: "load_more_link" ) %>
  <% end %>
</div>

