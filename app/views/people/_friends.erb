<div class="container">
  <div class="row">
    <div class="col-3">Спільних голосувань</div>
    <div class="col-3">Депутат</div>

    <div class="col-3">Округ №</div>
    <div class="col-3">Фракція</div>
  </div>

  <% friends.each do |f| %>
  <div class="row">
    <div class="col-3">
      <div class="progress">
        <div class="progress-bar progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="background-color: #01AFFF">
          <%= fraction_to_percentage_display((f.count.to_f/mp.mp_info.votes_possible))%>
        </div>
      </div>
      <script type="text/javascript">
        //<![CDATA[
        $( document ).ready(function(){
          $(".progress-bar").animate({
            width: "<%= fraction_to_percentage_display((f.count.to_f/mp.mp_info.votes_possible))%>"
          }, 2500);
        });
        //]]>
      </script>
      <%= f.count %> ()</div>
    <div class="col-3"><%= f.mp2.full_name %></div>

    <div class="col-3"><%= f.mp2.okrug %></div>
    <div class="col-3"><%= f.mp2.faction %></div>
  </div>
  <% end %>
</div>

<!-- 3 2 end-->